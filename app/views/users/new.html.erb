<% provide(:title, 'Sign up') %>
<h1>Neuer Benutzer</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :email %>
	<%= f.text_field :email %>

	<%= f.label :password, "Passwort" %>
	<%= f.password_field :password %>

	<%= f.label :password_confirmation, "Passwort bestÃ¤tigen" %>
	<%= f.password_field :password_confirmation %>
	
  <%= f.submit "Neuen Benutzer erstellen", class: "btn btn-large btn-primary" %>
<% end %>