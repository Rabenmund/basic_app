<% provide(:title, @user.name) %>
<%= link_to "<- Mitspielerliste", users_path%>
<div><br><br></div>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
	<section>
	  <%= link_to "Einstellungen", edit_user_path(@user) if correct_user? %>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h2>Kurznachrichten (<%= @user.microposts.count %>)</h2>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>