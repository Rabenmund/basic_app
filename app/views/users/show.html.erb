<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.nickname %>
	  <h2>
		<%= @user.name %>
      </h2>
	  </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
	<section>
	  <%= link_to "Einstellungen", edit_user_path(@user), class: "btn" if correct_user? %>
  </aside>
</div>