<% provide(:title, "Edit user") %> 
<h1>Einstellungen ändern</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password, "Passwort" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Passwort wiederholen" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Änderungen speichern", class: "btn btn-large btn-primary" %>
<% end %>

<%= gravatar_for(@user) %>
<a href="http://gravatar.com/emails">gravatar ändern</a>